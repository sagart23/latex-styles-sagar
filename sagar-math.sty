\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{sagar-math}[2025/11/30 v1.1 Sagar common math package]

% ------------------------------------------------------
% Core AMS math packages
% ------------------------------------------------------
\RequirePackage{amsmath}   % core enhanced math
\RequirePackage{amssymb}   % extra symbols (also loads amsfonts)
\RequirePackage{mathtools} % fixes & extensions to amsmath

% ------------------------------------------------------
% Custom math commands (lightweight alternatives)
% ------------------------------------------------------
% Uncomment if you need these specific commands:
% \newcommand{\dv}[2]{\frac{d#1}{d#2}}           % ordinary derivative
% \newcommand{\ddv}[2]{\frac{d^2#1}{d#2^2}}     % second derivative
% \newcommand{\pdv}[2]{\frac{\partial#1}{\partial#2}}  % partial derivative
% \renewcommand{\vec}[1]{\mathbf{#1}}           % bold vectors

% ------------------------------------------------------
% SI units and number formatting
% ------------------------------------------------------
\RequirePackage{siunitx}

\sisetup{
  detect-all,
  per-mode = symbol,
  separate-uncertainty = true,
  exponent-product = \cdot,
  output-decimal-marker = {.}
}

% ------------------------------------------------------
% Extra math operators and symbols
% ------------------------------------------------------
\DeclareMathOperator\cosec{cosec}  % Cosecant (common in Indian curriculum)

% ------------------------------------------------------
% Indian Rupee symbol
% ------------------------------------------------------
\RequirePackage{tfrupee}

