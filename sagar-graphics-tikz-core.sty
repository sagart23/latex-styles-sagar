\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{sagar-graphics-core}[2025/11/30 v1.0 Core graphics for math/physics]

% ------------------------------------------------------
% Core TikZ and plotting packages
% ------------------------------------------------------
\RequirePackage{tikz}
\RequirePackage{tkz-euclide}      % Geometry diagrams
\RequirePackage{pgfplots}         % Function graphs
\RequirePackage{pgfplotstable}    % Data tables for plotting

% ------------------------------------------------------
% Essential TikZ libraries
% ------------------------------------------------------
\usetikzlibrary{
  arrows.meta,         % Modern arrow tips
  calc,                % Coordinate calculations
  angles,              % Angle marking (geometry)
  shapes.geometric,    % Circles, polygons, etc.
  positioning,         % Relative positioning (above=of, etc.)
  patterns            % Hatching, dots, lines
}

% ------------------------------------------------------
% PGFPlots configuration
% ------------------------------------------------------
\pgfplotsset{compat=1.18}

% Essential pgfplots library for calculus (area under curves)
\usepgfplotslibrary{fillbetween}

% ------------------------------------------------------
% Modern arrow style default
% ------------------------------------------------------
\tikzset{>=Stealth}

