\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{sagar-graphics-tikz}[2025/11/23 v1.0 Sagar graphics/TikZ package]

% --------------------------------------------------
% Graphics and visualization
% --------------------------------------------------
\RequirePackage{graphicx}
\RequirePackage{float}
\RequirePackage{caption}
\RequirePackage{subcaption}
\RequirePackage{wrapfig}
\RequirePackage{multicol}

% NOTE:
%   Do NOT set \graphicspath here so that each document
%   can choose its own images folder in the preamble, e.g.:
%   \graphicspath{{./images/}{./figures/}}

% --------------------------------------------------
% Tables and layout
% --------------------------------------------------
\RequirePackage{booktabs}
\RequirePackage{tabularx}
\RequirePackage{longtable}
\RequirePackage{tabularray}   % modern and powerful tables
\RequirePackage{varwidth}     % handy for flexible-width cells/boxes

% Lists and spacing helpers
\RequirePackage{enumitem}
\RequirePackage{setspace}
% Per-document, you can still customize:
%   \setlist[enumerate]{label=(\alph*)}
%   \setlist[itemize]{label=\textbullet}
%   \doublespacing / \onehalfspacing / \setstretch{1.2}

% --------------------------------------------------
% TikZ and plotting
% --------------------------------------------------
\RequirePackage{tikz}
\RequirePackage{tkz-euclide}
\RequirePackage{pgfplots}
\RequirePackage{pgfplotstable}
\RequirePackage[americanvoltages,fulldiodes,siunitx]{circuitikz}

% TikZ libraries (from your templates)
\usetikzlibrary{
  patterns,
  arrows.meta,
  calc,
  arrows,
  shadows.blur,
  math,
  angles,
  shapes.geometric,
  positioning,
  decorations.pathmorphing,
  backgrounds,
  fit
}

% PGFPlots configuration
\pgfplotsset{compat=1.18}
\usepgfplotslibrary{statistics,fillbetween}

% Modern default arrow tip
\tikzset{>=Stealth}

% --------------------------------------------------
% Notes
% --------------------------------------------------
% - siunitx is expected to be loaded already (e.g. via sagar-math.sty).
