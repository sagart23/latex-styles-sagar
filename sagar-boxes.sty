\RequirePackage[most,breakable]{tcolorbox}
\tcbuselibrary{skins,raster,theorems}

% -----------------------------------------------------------
% Definition Box - Enhanced Professional Style
% -----------------------------------------------------------
\newtcolorbox{definition}[2][]{
    enhanced,
    colback=primaryblue!5,
    colframe=primaryblue!80!black,
    colbacktitle=primaryblue!80!black,
    coltitle=white,
    title={\textbf{Definition: #2}},
    fonttitle=\sffamily\bfseries,
    attach boxed title to top left={
        xshift=0.5cm,
        yshift=-3mm,
        yshifttext=-1mm
    },
    boxed title style={
        enhanced,
        size=small,
        colframe=primaryblue!80!black,
        sharp corners
    },
    sharp corners,
    drop shadow={black!20!white},
    breakable,
    #1
}

